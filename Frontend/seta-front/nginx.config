server {
    listen 80;
    server_name localhost;

    root /usr/share/nginx/html;
    index index.html;

    # SPA routing (fallback to index.html)
    location / {
        try_files $uri /index.html;
    }

    # 모든 정적 파일 요청 → dist/assets
    location /assets/ {
        alias /usr/share/nginx/html/assets/;
        # JS/CSS/이미지 모두 처리 가능
        expires 6M;
        access_log off;
        add_header Cache-Control "public";
    }

    # favicon, 폰트 등 기타 정적 자원 캐싱
    location ~* \.(?:ico|woff2?|eot|ttf|svg)$ {
        expires 6M;
        access_log off;
        add_header Cache-Control "public";
    }
}
