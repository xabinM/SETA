server {
    listen 80;
    server_name localhost;

    root /usr/share/nginx/html;
    index index.html;

    # 정적 파일 요청: JS, CSS, 이미지 등
    location /assets/ {
        alias /usr/share/nginx/html/assets/;
        access_log off;
        expires 6M;
        add_header Cache-Control "public";
    }

    location ~* \.(?:ico|woff2?|eot|ttf|svg|png|jpg|jpeg|gif)$ {
        access_log off;
        expires 6M;
        add_header Cache-Control "public";
    }

    # SPA fallback: 파일 없으면 index.html
    location / {
        try_files $uri $uri/ /index.html;
    }

    # MIME 타입 강제 설정 (JS/CSS 정확히)
    types {
        text/javascript js mjs;
        text/css css;
        image/png png;
        image/jpeg jpg jpeg;
        image/gif gif;
        font/woff woff;
        font/woff2 woff2;
        application/font-woff woff;
        application/font-woff2 woff2;
    }
}
