server {
    listen 80;
    server_name localhost;

    root /usr/share/nginx/html;
    index index.html;

    # JS, CSS, 이미지 등 정적 리소스는 /assets/로 요청 시 반환
    location /assets/ {
        root /usr/share/nginx/html;
        try_files $uri =404;
        expires 6M;
        access_log off;
        add_header Cache-Control "public";
    }

    # favicon 요청 처리
    location = /seta.ico {
        root /usr/share/nginx/html;  # 실제 dist/seta.ico 위치
        try_files $uri =404;
        access_log off;
        expires 6M;
        add_header Cache-Control "public";
    }

    # 폰트, 아이콘 등 캐싱
    location ~* \.(?:woff2?|eot|ttf|svg)$ {
        root /usr/share/nginx/html;
        try_files $uri =404;
        expires 6M;
        access_log off;
        add_header Cache-Control "public";
    }

    # SPA 라우팅 (정적 리소스가 아닌 경우만 index.html 반환)
    location / {
        try_files $uri $uri/ /index.html;
    }
}
