server {
    listen 80;
    server_name localhost;

    root /usr/share/nginx/html;
    index index.html;

    # 정적 자원 (JS, CSS, 이미지 등) → dist/assets
    location /assets/ {
        root /usr/share/nginx/html;
        expires 6M;
        access_log off;
        add_header Cache-Control "public";
    }

    # SPA 라우팅
    location / {
        try_files $uri $uri/ /index.html;
    }

    # favicon, 폰트 등 캐싱
    location ~* \.(?:ico|woff2?|eot|ttf|svg)$ {
        expires 6M;
        access_log off;
        add_header Cache-Control "public";
    }
}
